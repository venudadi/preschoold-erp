# Production Environment Configuration Template
# Copy this file to .env for production deployment

# === CRITICAL: DO NOT COMMIT ACTUAL CREDENTIALS TO VERSION CONTROL ===

# Application Environment
NODE_ENV=production

# Server Configuration
PORT=5001
FRONTEND_URL=https://your-domain.com
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Database Configuration - USE SECURE CREDENTIALS
DB_HOST=localhost
DB_PORT=3306
DB_USER=preschool_user
DB_PASSWORD=your-secure-database-password-here
DB_NAME=preschool_erp

# Database Connection Pool Settings (Production Optimized)
DB_CONNECTION_LIMIT=20
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# Security Configuration - GENERATE NEW SECURE VALUES
JWT_SECRET=your-256-bit-secret-key-here-minimum-32-characters
JWT_REFRESH_SECRET=your-refresh-token-secret-here-minimum-32-characters
CSRF_SECRET=your-csrf-secret-key-here-minimum-32-characters

# Session Configuration
SESSION_SECRET=your-session-secret-key-here-minimum-32-characters
SESSION_TIMEOUT=86400000
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# Email Configuration (Required for notifications)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-app-password
FROM_EMAIL=noreply@your-domain.com

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_MAX_FILES=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,mp4,mp3,doc,docx

# AWS S3 Configuration (for production file storage)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET=your-preschool-erp-bucket
S3_PRESIGNED_URL_EXPIRE=3600

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=error
LOG_FILE_PATH=/var/log/preschool-erp/app.log
ENABLE_ACCESS_LOGS=true

# Security & Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
BCRYPT_SALT_ROUNDS=12

# Monitoring & Health Checks
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_DB=true
HEALTH_CHECK_REDIS=true

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_OFFLINE_SYNC=true
ENABLE_AI_INSIGHTS=false
ENABLE_ADVANCED_ANALYTICS=true

# Backup Configuration
ENABLE_AUTO_BACKUP=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Performance Monitoring
APM_SERVICE_NAME=preschool-erp
APM_SERVICE_VERSION=2.1.0
ENABLE_PERFORMANCE_MONITORING=true

# === DEVELOPMENT OVERRIDES (Only for non-production) ===
# Uncomment these ONLY for development/staging environments
# NODE_ENV=development
# COOKIE_SECURE=false
# LOG_LEVEL=debug
# RATE_LIMIT_MAX_REQUESTS=1000