# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=preschool_erp
DB_SSL=false

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
# Generate secure secrets using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_CHANGE_THIS_IN_PRODUCTION
JWT_REFRESH_SECRET=your_refresh_secret_key_here_CHANGE_THIS_IN_PRODUCTION

# Email Configuration (Hostinger SMTP)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=info@vanisris.com
SMTP_PASS=your_email_password
FROM_NAME=Preschool ERP System
FROM_EMAIL=support@vanisris.com

# Server Configuration
PORT=5001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Security
ALLOW_AUTH_DEBUG=true

# File Upload
MAX_FILE_SIZE=10485760

# Session Configuration (CHANGE THIS IN PRODUCTION!)
SESSION_SECRET=your_session_secret_here_CHANGE_THIS_IN_PRODUCTION

# Cloud Storage Configuration (DigitalOcean Spaces or AWS S3)
# For DigitalOcean Spaces (recommended):
# 1. Create a Space in DigitalOcean Dashboard
# 2. Generate Access Keys from API -> Spaces Keys
# 3. Use region where your Space is located (e.g., nyc3, sgp1, sfo3)
AWS_REGION=nyc3
AWS_ENDPOINT=https://nyc3.digitaloceanspaces.com
AWS_ACCESS_KEY_ID=your_spaces_access_key
AWS_SECRET_ACCESS_KEY=your_spaces_secret_key
AWS_S3_BUCKET=your-space-name

# For AWS S3 instead:
# Remove AWS_ENDPOINT line and use your actual AWS region
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=your-bucket-name
