{
  "info": {
    "_postman_id": "b1e2c3d4-erp-auth-test-2025",
    "name": "Preschool ERP Auth API Tests",
    "description": "Automated tests for /register, /login, and /profile endpoints in preschool ERP backend.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:3000/api/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fullName\": \"Test User\",\n  \"email\": \"testuser1@example.com\",\n  \"password\": \"TestPass123!\",\n  \"role\": \"parent\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Registration status is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Login User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:3000/api/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser1@example.com\",\n  \"password\": \"TestPass123!\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Login status is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "if (pm.response.code === 200) {",
              "    var json = pm.response.json();",
              "    pm.environment.set(\"authToken\", json.token);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get Profile",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{authToken}}" }
        ],
        "url": {
          "raw": "http://localhost:3000/api/profile",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "profile"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Profile status is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Profile contains user object\", function () {",
              "    var json = pm.response.json();",
              "    pm.expect(json).to.have.property('user');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Cleanup Test User",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:3000/api/test/cleanup-user",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "test", "cleanup-user"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser1@example.com\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Cleanup status is 200 or 204\", function () {",
              "    pm.expect([200,204]).to.include(pm.response.code);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
