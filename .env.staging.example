# Staging Environment Configuration

# Database
DB_HOST=mysql
DB_USER=root
DB_PASSWORD=your_staging_db_password
DB_NAME=preschool_erp_staging
DB_PORT=3306
DB_ROOT_PASSWORD=your_staging_root_password

# Application
NODE_ENV=staging
PORT=5001

# JWT
JWT_SECRET=your_staging_jwt_secret_here_make_it_very_long_and_random

# Docker Hub (for docker-compose)
DOCKERHUB_USERNAME=yourusername

# API URL (if different from default)
VITE_API_URL=http://localhost:5001

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email (if configured)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=your_smtp_password
