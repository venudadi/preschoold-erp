# Production Environment Configuration

# Database
DB_HOST=mysql
DB_USER=root
DB_PASSWORD=your_production_db_password_CHANGE_THIS
DB_NAME=preschool_erp
DB_PORT=3306
DB_ROOT_PASSWORD=your_production_root_password_CHANGE_THIS

# Application
NODE_ENV=production
PORT=5001

# JWT - MUST BE CHANGED IN PRODUCTION
JWT_SECRET=your_production_jwt_secret_CHANGE_THIS_to_a_very_long_random_string

# Docker Hub (for docker-compose)
DOCKERHUB_USERNAME=yourusername

# API URL (update with your production domain)
VITE_API_URL=https://api.yourdomain.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_smtp_password_CHANGE_THIS
SMTP_FROM=noreply@yourdomain.com

# Security
# Add your production domain here
CORS_ORIGIN=https://yourdomain.com

# Logging
LOG_LEVEL=info
